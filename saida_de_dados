#1
Algoritmo "teste_saida1"

Var 
  a : inteiro
  b : real
  c : caractere
  d : logico

Inicio

  a <- 32
  b <- 2.34567
  c <- "Bom dia"
  d <- VERDADEIRO

Fimalgoritmo

