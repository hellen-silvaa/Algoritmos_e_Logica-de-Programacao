Algoritmo "teste_saida3"

Var 
  idade : inteiro
  salario : real 
  nome : caractere


Inicio

  escreval("Bom dia!")
//pular linha usa escreval
  escreval
  escreval ("Boa noite!")
Fimalgoritmo

